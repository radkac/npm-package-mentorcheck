{
  "name": "npm-package-mentorcheck",
  "version": "1.0.0",
  "description": "Say hello nicely in Slovak",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/radkac/npm-package-mentorcheck.git"
  },
  "keywords": [
    "hello",
    "slovak"
  ],
  "author": "ov3cka",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/radkac/npm-package-mentorcheck/issues"
  },
  "homepage": "https://github.com/radkac/npm-package-mentorcheck#readme",
  "devDependencies": {
    "@types/jest": "^26.0.16",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.2"
  }
}
